{
    "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "outDir": "build",
    "sourceMap": true,
    "strict": false,
    "types": ["node", "jest"],
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["process.env.d.ts", "./**/*.ts"],
  "exclude": ["node_modules"]
}